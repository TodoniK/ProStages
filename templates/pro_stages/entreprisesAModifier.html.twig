{% extends 'base.html.twig' %}

{% block body %}

<center>
    <br>
    <div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
		</div>
        <div class="alert alert-dismissible alert-warning col-md-4">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <h4 class="alert-heading">Attention !</h4>
            <p class="mb-0">Vous vous appretez à modifier une entreprise.</p>
        </div>
    <div class="col-md-4">
		</div>
	</div>
    </div>
    <br>

    {% set debutNouvelleLigne = true %}
	    
        <!--Boucle pour créer les conteneurs et remplir les cards-->

        {% for uneEntreprise in entreprises %}

        {#Verifier si on est en début de ligne#}
        {% if debutNouvelleLigne == true %}
            <div class="row">
		        
            {% set debutNouvelleLigne = false %}
        {% endif %}

        <!--Affichage de l'ensemble des entreprises dans les petites card-->
                <div class="col-md-4">
                    <div class="card border-success mb-3" style="max-width: 20rem;">
                        <div class="card-header">Entreprise n°{{uneEntreprise.id}}</div>
                            <div class="card-body">
                                <h4 class="card-title"><a href="{{path('prostages_entreprises_modifier',{nomEntreprise:uneEntreprise.nom})}}" class="link-success">{{uneEntreprise.nom}}</a></h4>
                                    <p class="card-text">Activité : {{uneEntreprise.activite}}</p>
                            </div>
                    </div>
                </div>
		
        {#Verifier s'il faut passer à la ligne suivante (toutes les 3 entreprises)#}
        {% if loop.index % 3 == 0 %}
            </div>
            <br>
            {% set debutNouvelleLigne = true %}
        {% endif %}

        {% endfor %}

</center>

{% endblock %}