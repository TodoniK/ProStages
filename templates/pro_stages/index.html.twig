{% extends 'base.html.twig' %}

{% block menu %}
<center>
<br>
<div class=titreAccueil>
				<center><h1>Bienvenue sur Pro Stages !</h1></center><br>
</div>


</center>
{% endblock %}

{% block body %}

<center>
<br><h2> Liste des stages </h2>
</center>

	<br>
	<center>
      <p>
      Vous trouverez ci-dessous les dernières ressources pédagogiques ajoutées sur Pro Stages.
      </p>
      <br>
      <a href="{{path('prostages_ajout_stage')}}" class="link-success">Ajouter un stage</a><br>
	<br>

	  <div class="container-fluid">
      <table class="table table-striped">
        
        <!--Définition du contenu de mon tableau-->
        <thead>
          <tr>
            <th>Titre</th>
            <th>Entreprise</th>
            <th>Description</th>
            <th>Email</th>
			      <th>Adresse</th>
          </tr>
        </thead>

        <!--Inscription de mes données dans le tableau-->
        <tbody>
          
          {% for unStage in stages %}
          
          <tr>
            <td style="padding-left: 20px"><a href="{{path('prostages_stages',{idStage:unStage.id})}}" class="link-success">{{unStage.titre}}</a></td>
            <td style="padding-left: 20px">{{unStage.entreprise.nom}}</td>
            <td style="padding-left: 20px">{{unStage.descMissions}}</td>
            <td style="padding-left: 20px">{{unStage.emailContact}}</td>
			      <td style="padding-left: 20px">{{unStage.entreprise.adresse}}</td>
          </tr>

          {% endfor %}
          </tbody>
      
      </table>

	  </center>
</div>

{% endblock %}